{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "type",
    "screenRegion",
    "screenCoords",
    "viewportCoords"
  ],
  "properties": {
    "type": {
      "$id": "#/properties/type",
      "type": "string",
      "enum": [
        "tap",
        "doubletap"
      ],
      "title": "The Type Schema",
      "default": "",
      "examples": [
        "tap"
      ],
      "pattern": "^(.*)$"
    },
    "screenRegion": {
      "$id": "#/properties/screenRegion",
      "type": "string",
      "enum": [
        "header",
        "body",
        "footer"
      ],
      "title": "The Screen Region Schema",
      "default": "",
      "examples": [
        "body"
      ],
      "pattern": "^(.*)$"
    },
    "screenCoords": {
      "$id": "#/properties/coords",
      "type": "array",
      "title": "The Design Coords Schema",
      "description": "The x,y coordinates, on the source design, of the tap interaction",
      "default": null,
      "maxItems": 2,
      "minItems": 2,
      "items": {
        "$id": "#/properties/coords/items",
        "type": "integer",
        "title": "The Items Schema",
        "default": 0,
        "examples": [
          0,
          100
        ]
      }
    },
    "viewportCoords": {
      "$id": "#/properties/coords",
      "type": "array",
      "title": "The Viewport Coords Schema",
      "description": "The x,y viewport coordinates of the tap interaction",
      "default": null,
      "maxItems": 2,
      "minItems": 2,
      "items": {
        "$id": "#/properties/coords/items",
        "type": "integer",
        "title": "The Items Schema",
        "default": 0,
        "examples": [
          0,
          100
        ]
      }
    }
  }
}