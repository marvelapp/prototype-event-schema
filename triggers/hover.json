{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "type",
    "duration"
  ],
  "properties": {
    "type": {
      "$id": "#/properties/type",
      "type": "string",
      "enum": [
        "hover"
      ],
      "title": "The Type Schema",
      "examples": [
        "hover"
      ],
      "pattern": "^(.*)$"
    },
    "duration": {
      "$id": "#/properties/duration",
      "type": "integer",
      "title": "The Duration Schema",
      "default": 0,
      "examples": [
        1250
      ],
      "minimum": 0.0
    }
  }
}
