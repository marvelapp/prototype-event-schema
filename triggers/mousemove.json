{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "type",
    "coords"
  ],
  "properties": {
    "type": {
      "$id": "#/properties/type",
      "type": "string",
      "enum": [
        "mousemove"
      ],
      "title": "The Type Schema",
      "examples": [
        "mousemove"
      ],
      "pattern": "^(.*)$"
    },
    "coords": {
      "$id": "#/properties/coords",
      "type": "array",
      "title": "The Coords Schema",
      "description": "The x,y coordinates of the mousemove interaction",
      "default": null,
      "maxItems": 2,
      "minItems": 2,
      "items": {
        "$id": "#/properties/coords/items",
        "type": "integer",
        "title": "The Items Schema",
        "default": 0,
        "examples": [
          0,
          100
        ]
      }
    },
    "relativeCoords": {
      "$id": "#/properties/relative-coords",
      "type": "array",
      "title": "The Relative Coords Schema",
      "description": "The x,y coordinates of the interaction, relative to the node/object that was clicked",
      "default": null,
      "maxItems": 2,
      "minItems": 2,
      "items": {
        "$id": "#/properties/relative-coords/items",
        "type": "integer",
        "title": "The Items Schema",
        "default": 0,
        "examples": [
          0,
          100
        ]
      }
    }
  }
}